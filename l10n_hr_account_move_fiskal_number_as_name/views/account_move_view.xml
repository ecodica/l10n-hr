<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_l10n_hr_move_form" model="ir.ui.view">
        <field name="name">view_l10n_hr_move_form</field>
        <field name="model">account.move</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="l10n_hr_account_base.view_l10n_hr_move_form"/>
        <field name="arch" type="xml">
            <label for="l10n_hr_fiskalni_broj" position="attributes">
                <attribute name="invisible" add="company_id.l10n_hr_fiskalni_broj_as_move_name" separator=" or "/>
            </label>
            <field name="l10n_hr_date_document" position="before">
                <field name="l10n_hr_fiskalni_broj" position="move"/>
            </field>
            <field name="l10n_hr_fiskalni_broj" position="attributes">
                <attribute name="nolabel">0</attribute>
            </field>
        </field>
    </record>

</odoo>
